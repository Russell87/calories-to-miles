<!-- This is the table to display food and calories from the database -->
<%= content_for :title, "Calories to Miles | Food Database" %>
<%= content_for :sticky_title, "Food Database" %> 

<p class="lead"> There are presently <%= @foodCount %> food <%= 'item'.pluralize(@foodCount) %> in the database.<p>

<div class="table-responsive">
<table id="food-table" class="table table-condensed table-striped">
    <tr>
        <th>Food</th>
        <th>Calories</th>
    </tr>
    <tr> 
        <% @food.limit(5).each do |food| %>
    <td>
        <%= food.name %>
    </td>
    <td>
        <%= food.calories %>
    </td>
</tr>
<% end %>
</table>
</div>
<%= @response["report"]["food"] %>  
