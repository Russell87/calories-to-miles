<%= content_for :title, "Calories to Miles | Exercise Database" %>
<%= content_for :sticky_title, "Exercise Database" %>


<p class="lead">There are currently <%= pluralize @exerciseCount, 'record', 'records' %> in the database representing <%= pluralize @categoryCount, 'category', 'categories' %>.

<%= will_paginate  %>

<div class="table-responsive">
<table = id="exercise-category-table" class="table table-condensed table-striped">
<tr>
    <th>Category</th>
    <th>Number of Exercises</th>
</tr>
<tr>
    
</tr>
<tr>
<% @descriptionCount.each do |k,v| %>
</tr>
<td>
<%= k %>

</td>
<td>
<%= v %>
</td>
</tr>

<% end %>

</table>
</div>


<div class="table-responsive">
<table id="exercise-table" class="table table-condensed table-striped">
    <tr>
        <th>Exercise</th>
        <th>Description</th>
        <th>MET Value</th>
    </tr>
    <tr> 
        <% @exercises.each do |e| %>
    <td>
        <%= e.category %>
    </td>
    <td>
        <%= e.description %>
    </td>
    <td>
        <%= e.met %>
    </td>
</tr>
<% end %>
</table>
</div>

<%= will_paginate  %>