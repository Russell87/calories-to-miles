<%= content_for :title, "Calories to Miles | Exercise Database" %>
<%= content_for :sticky_title, "Exercise Database" %>


<div class="table-responsive">
<table id="food-table" class="table table-condensed table-striped">
    <tr>
        <th>Exercise</th>
        <th>Description</th>
        <th>MET Value</th>
    </tr>
    <tr> 
        <% @exercise.each do |e| %>
    <td>
        <%= e.category %>
    </td>
    <td>
        <%= e.description %>
    </td>
    <td>
        <%= e.met %>
    </td>
</tr>
<% end %>
</table>
</div>