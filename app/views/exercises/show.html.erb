

<div class="row">
  <div class="col-sm-4"></div>
  <div class="col-sm-4">
  <div class="container">
    <div class="form-group">
        <%= form_for :results, url:results_path do |f| %>
            <strong>Weight:</strong> <br>
            <%= f.text_field :weight, placeholder: "Weight in lbs" %> <br>
            <strong>Exercise:</strong><br> <%= select_tag(:exercise, options_for_select(Exercise.all.pluck(:name))) %><br>
            <strong>Food:</strong><br>
            <%= select_tag(:food, options_for_select(Food.limit(5).pluck(:name))) %><br><br>
            <p><%= f.submit "Calculate", class: "btn btn-primary" %> </p>
        <% end %>
    </div>
</div>
  
  
  </div>
  <div class="col-sm-4"></div>
</div>
