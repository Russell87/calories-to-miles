<!-- This is main application HTML -->

<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<!-- Links to pages on the application defined in config/routes.rb and directed to app/views/static_pages -->



<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <%= link_to root_path, :class => "navbar-brand" do %>
      Calories to Miles</a>
      <% end %>
     
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
   
      <ul class="nav navbar-nav navbar-right">
        <li>  <%= link_to 'About', about_path %></li>
        <li>  <%= link_to 'Settings', settings_path %></li>
        <li>  <%= link_to 'Exercise Database', exercise_path %></li>
        <li>  <%= link_to 'Food Database', food_path %></li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<!-- Below will display the corresponding view ("page") when a user clicks the above links -->
<%= yield %>




</body>
</html>
