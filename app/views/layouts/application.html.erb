<!-- This is main application HTML -->

<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1">`

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
</head>
<body>
<%= render 'layouts/header' %>
<!-- Links to pages on the application defined in config/routes.rb and directed to app/views/static_pages -->

<!-- Begin page content -->
  <div class="container">
    <div class="page-header">
      <h1><%= yield(:sticky_title) %></h1>
    </div>
    <!-- By default, show the calculator form otherwise show the corresponding view user clicks on (such as about, database, etc) -->
    <%= yield %>
    
  </div>
</div>


<%= render 'layouts/footer' %>
</body>
</html>
